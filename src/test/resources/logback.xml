<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%blue(%d{yyyy-MM-dd HH:mm:ss}) %yellow([%thread]) [%highlight(%-4level)] %cyan(%logger{15})   %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>